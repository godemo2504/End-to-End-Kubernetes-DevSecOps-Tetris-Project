# Nouvelle politique pour S3 et DynamoDB
resource "aws_iam_role_policy" "TerraformS3DynamoDBPolicy" {
  name = "TerraformS3DynamoDBPolicy"
  role = aws_iam_role.EKSClusterRole.name

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "s3:ListBucket",
          "s3:GetObject",
          "s3:PutObject",
          "s3:DeleteObject"
        ]
        Resource = [
          "arn:aws:s3:::bucket-godemo",
          "arn:aws:s3:::bucket-godemo/*"
        ]
      },
      {
        Effect = "Allow"
        Action = [
          "dynamodb:GetItem",
          "dynamodb:PutItem",
          "dynamodb:DeleteItem",
          "dynamodb:Scan",
          "dynamodb:UpdateItem"
        ]
        Resource = "arn:aws:dynamodb:us-east-1:${data.aws_caller_identity.current.account_id}:table/tablegodemo1"
      }
    ]
  })
}
